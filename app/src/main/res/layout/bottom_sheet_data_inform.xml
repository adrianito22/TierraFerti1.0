<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E1E1E1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/txtAdviserDesvicunlar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="Agregue informe"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ediData1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backrgound_item"
        android:ems="10"
        android:hint="Nombre Informe"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/ediData2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/backrgound_item"
        android:ems="10"
        android:hint="Nota (Opcional)"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnCreateInform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:text="Crear Informe" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />
</LinearLayout>